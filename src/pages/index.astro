---
import BaseLayout from "@layouts/BaseLayout.astro";
import { Prism } from "@astrojs/prism";
import InlinePrism from "@components/InlinePrism.astro";
import PageHeader from "@components/PageHeader.astro";
---

<BaseLayout 
	title="Welcome to Astro." 
	description="Astro base starter home page."
>
	<PageHeader />
	<main class="wrapper-lg">
		<h1><span class="gradient">Astro</span> Base <span class="gradient">Starter</span></h1>
		<section class="wrapper">
			<p>
				To get started, open the directory <InlinePrism lang="js" code={`src/pages`} /> in your project.<br>
				<strong>Code Challenge:</strong> Tweak the "Astro Base Starter" message above.
			</p>
			<Prism 
				lang="js" 
				code={`const num = 123;
function read(input) {
	return input.toString();
}

const text = read(num);`
			} />
		</section>
	</main>
</BaseLayout>

<style>
	.gradient {
		background: linear-gradient(45deg, hwb(216 0% 20%), hwb(357 35% 1%));
  	background-clip: text;
  	-webkit-background-clip: text;
  	-webkit-text-fill-color: transparent;
	}

	h1 {
		width: fit-content;
		margin-inline: auto;
		font-size: var(--size-1200);
	}
</style>
